{
  "manifest_version": 3,
  "name": "PPA Auto Data Loader",
  "version": "1.0",
  "description": "This plugin downloads your LinkedIn Analytics data and uploads it to PPA automatically",
  "permissions": ["scripting", "downloads", "activeTab", "tabs", "alarms", "storage"],
  "host_permissions": ["https://www.linkedin.com/*"], //https://www.linkedin.com/analytics/creator/content/?metricType=IMPRESSIONS&timeRange=past_7_days
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icon.png",
      "48": "icon48.png"
    }
  },
  "options_page": "options.html"  // Link to the options page
}
